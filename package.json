{
  "name": "nba-realtime-service",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint . --ext .ts",
    "migrate": "tsx src/db/migrate.ts",
    "test:db": "tsx src/db/test.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:api": "docker compose exec -w /app nba-realtime-service python3 python-bridge/test_api.py",
    "test:api:detailed": "docker compose exec -w /app nba-realtime-service python3 python-bridge/test_api.py --skip-etag"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "kafkajs": "^2.2.4",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "ioredis": "^5.4.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/pg": "^8.10.9",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.12.0",
    "@typescript-eslint/parser": "^8.8.1",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^2.0.0"
  }
}